{
  "name": "cryptol",
  "displayName": "cryptol",
  "description": "Language support for Cryptol",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.2"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cryptol.reload",
        "title": "Restart language server"
      }
    ],
    
    "configuration": {
        "title": "Cryptol configuation",
        "properties": {
            "cryptol.language-server-path": {
                "type": "string",
                "default": "cryptol-language-server",
                "description": "Path to the Cryptol language server"
            }
        }
      },

      "languages": [
        {
            "id": "cryptol",
            "aliases": [ "Cryptol", "cryptol" ],
            "extensions": [
                ".cry"
            ],
            "configuration": "./language-configuration.json"
        }
      ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },

  "dependencies": {
   "vscode-languageclient": "^7.0.0"
  },
 
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
